@model G_Stock_Vente.Models.Unite

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}

<!-- Form Element area Start-->

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.uniteId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="uniteId" />
            <input type="hidden" asp-for="Created" />
            <input type="hidden" asp-for="updated" />
            <div class="form-group">
                <label asp-for="libelleUnite" class="control-label"></label>
                <input asp-for="libelleUnite" class="form-control" />
                <span asp-validation-for="libelleUnite" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="codeUnite" class="control-label"></label>
                        <input asp-for="codeUnite" class="form-control" />
                        <span asp-validation-for="codeUnite" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-check">
                        <label asp-for="statutUnite" class="form-check-label"></label>
                        <input asp-for="statutUnite" class="form-check-input" type="checkbox" />
                        <span asp-validation-for="statutUnite" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
